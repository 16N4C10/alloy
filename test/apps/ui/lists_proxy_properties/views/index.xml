<Alloy>
	<TabGroup>
		<Tab title="table">
			<Window title="table">

				<TableView>

					<!-- headerView -->
					<HeaderView>
						<Label class="wrapper">headerView</Label>
					</HeaderView>

					<!-- footerView -->
					<FooterView>
						<Label class="wrapper">footerView</Label>
					</FooterView>

					<!-- headerPullView -->
					<HeaderPullView platform="ios">
						<View class="pull">
							<Label color="#F2F4F4" bottom="25dp">headerPullView</Label>
						</View>
					</HeaderPullView>

					<TableViewRow title="row 1"/>
					<TableViewRow title="row 2"/>
					<TableViewRow title="row 3"/>
					<TableViewRow title="row 4"/>

					<!-- table section -->
					<TableViewSection>

						<!-- headerView -->
						<HeaderView>
							<Label class="wrapper section">section headerView</Label>
						</HeaderView>

						<!-- footerView -->
						<FooterView>
							<Label class="wrapper section">section footerView</Label>
						</FooterView>

						<TableViewRow title="row 1.1"/>
						<TableViewRow title="row 1.2"/>
						<TableViewRow title="row 1.3"/>
						<TableViewRow title="row 1.4"/>

					</TableViewSection>

				</TableView>

			</Window>
		</Tab>

		<Tab title="table search">
			<Window title="table search">

				<TableView>

					<!-- footerView -->
					<FooterView>
						<Label class="wrapper">footerView</Label>
					</FooterView>

					<!-- search, shorthand with Ti.UI.SearchBar -->
					<SearchBar class="search" platform="ios"/>

					<!-- search, shorthand with Ti.UI.Android.SearchView -->
					<SearchView class="search" platform="android"/>

					<TableViewRow title="row 1"/>
					<TableViewRow title="row 2"/>
					<TableViewRow title="row 3"/>
					<TableViewRow title="row 4"/>

					<!-- table section -->
					<TableViewSection>

						<!-- headerView -->
						<HeaderView>
							<Label class="wrapper section">section headerView</Label>
						</HeaderView>

						<!-- footerView -->
						<FooterView>
							<Label class="wrapper section">section footerView</Label>
						</FooterView>

						<TableViewRow title="row 1.1"/>
						<TableViewRow title="row 1.2"/>
						<TableViewRow title="row 1.3"/>
						<TableViewRow title="row 1.4"/>

					</TableViewSection>

				</TableView>

			</Window>
		</Tab>

		<Tab title="list">
			<Window title="list">

				<ListView>

					<!-- headerView -->
					<HeaderView>
						<Label class="wrapper">headerView</Label>
					</HeaderView>

					<!-- footerView -->
					<FooterView>
						<Label class="wrapper">footerView</Label>
					</FooterView>

					<!-- pullView -->
					<PullView platform="ios">
						<View class="pull">
							<Label color="#F2F4F4" bottom="25dp">headerPullView</Label>
						</View>
					</PullView>

					<!-- plain section -->
					<ListSection>
						<ListItem title="row 1"/>
						<ListItem title="row 2"/>
						<ListItem title="row 3"/>
						<ListItem title="row 4"/>
					</ListSection>

					<ListSection>
						<!-- headerView -->
						<HeaderView>
							<Label class="wrapper section">section headerView</Label>
						</HeaderView>

						<!-- footerView -->
						<FooterView>
							<Label class="wrapper section">section footerView</Label>
						</FooterView>

						<ListItem title="row 5"/>
						<ListItem title="row 6"/>
						<ListItem title="row 7"/>
						<ListItem title="row 8"/>
					</ListSection>

				</ListView>

			</Window>
		</Tab>

	</TabGroup>
</Alloy>
